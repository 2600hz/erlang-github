{erl_opts,
 [
  {parse_transform, lager_transform},
  {src_dirs, ["src"]},
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warn_missing_spec,
  warn_untyped_record, debug_info
 ]
}.
{deps,
  [ {lager, "3.*", {git, "https://github.com/basho/lager.git", "3.0.2"}}
  , {barrel_jiffy, "0.14.4"}
  , {shotgun, "0.2.0"}
  ]
}.
